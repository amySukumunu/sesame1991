<%= form_for @micropost do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<%= f.hidden_field :user_id, :value => current_user.id %>
	
  	<%= f.label :title %><br />
  	<%=h f.text_field :title %><br />
	
  	<%= f.label :content %><br />
  	<%=h f.text_area :content, :row => 30, :cols=> 80 %><br />
  	
  	<%= f.label :category %><br />
  	<%=h f.text_field :category %><br />
  	
  		  	
 		
	<%= f.submit "Post" %>

<% end %>